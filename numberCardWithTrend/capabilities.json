{
    "dataRoles": [
        {
            "displayName": "Measure",
            "name": "measure",
            "kind": "Measure"
        },
        {
            "displayName": "Axis",
            "name": "axis",
            "kind": "GroupingOrMeasure"
        },
        {
            "displayName": "Trend Measure",
            "name": "trendMeasure",
            "kind": "Measure"
        },
        {
            "displayName": "Compare Against",
            "name": "compareValue",
            "kind": "Measure"
        },
        {
            "displayName": "Compare Measure",
            "name": "stateValue",
            "kind": "Measure"
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "measure": {
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "axis"
                    }
                },
                "values": {
                    "select": [
                        { "bind": { "to": "measure" } },
                        { "bind": { "to": "trendMeasure" } }
                    ]
                }
            }
        }
    ],
    "objects": {
        "measure": {
            "displayName": "Measure",
            "properties": {
                 "fontSize": {
                    "displayName": "Font size",
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                 }
            }
        },
        "chart": {
            "displayName": "Chart",
            "properties": {
                "type": {
                    "displayName": "Chart type",
                    "type": {
                        "enumeration": [
                            { "displayName": "Bar", "value": "bar" },
                            { "displayName": "Line", "value": "line" }
                        ]
                    }
                },
                "color": {
                    "displayName": "Chart color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "trendColor": {
                    "displayName": "Trend color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                }
            }
        }
    }
}
