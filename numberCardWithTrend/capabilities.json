            "kind": "Measure"
        },
        {
            "displayName": "State Value",
            "name": "stateValue",
            "kind": "Measure"
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "measure": { "max": 1 },
                    "trendMeasure": { "max": 1 },
                    "changeValue": { "max": 1 },
                    "stateValue": { "max": 1 }
                }
            ],
            "categorical": {
                "categories": {
                    "for": { "in": "axis" }
                },
                "values": {
                    "select": [
                        { "bind": { "to": "measure" } },
                        { "bind": { "to": "trendMeasure" } },
                        { "bind": { "to": "changeValue" } },
                        { "bind": { "to": "stateValue" } }
                    ]
                }
            }
        }
    ],
