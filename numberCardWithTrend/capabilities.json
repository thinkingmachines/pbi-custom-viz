                        }
                    }
                 }
            }
        },
        "chart": {
            "displayName": "Chart",
            "properties": {
                "type": {
                    "displayName": "Chart type",
                    "type": {
                        "enumeration": [
                            { "displayName": "Bar", "value": "bar" },
                            { "displayName": "Line", "value": "line" }
                        ]
                    }
                },
                "color": {
                    "displayName": "Chart color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "trendColor": {
