{
    "dataRoles": [
        {
            "displayName": "Measure",
            "name": "measure",
            "kind": "Measure"
        },
        {
            "displayName": "Trend Axis",
            "name": "axis",
            "kind": "GroupingOrMeasure"
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "measure": {
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "axis"
                    }
                },
                "values": {
                    "select": [
                        { "bind": { "to": "measure" } }
                    ]
                }
            }
        }
    ],
    "objects": {
        "cardNumber": {
            "displayName": "Card Number",
            "properties": {
                 "fontSize": {
                    "displayName": "Font size",
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                 }
            }
        }
    }
}
